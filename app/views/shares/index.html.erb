<h1>Listing shares</h1>

<table>
  <thead>
    <tr>
      <th>Worker</th>
      <th>Solution</th>
      <th>Difficulty</th>
      <th>Our result</th>
      <th>Pool result</th>
      <th>Reason</th>
      <th>Is block</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <td><%= share.worker %></td>
        <td><%= share.solution %></td>
        <td><%= share.difficulty %></td>
        <td><%= share.our_result %></td>
        <td><%= share.pool_result %></td>
        <td><%= share.reason %></td>
        <td><%= share.is_block %></td>
        <td><%= link_to 'Show', share %></td>
        <td><%= link_to 'Edit', edit_share_path(share) %></td>
        <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

